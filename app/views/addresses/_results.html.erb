<div class="absolute w-full bg-white mt-1 rounded-lg shadow-lg border border-gray-200 max-h-60 overflow-y-auto max-w-[calc(36rem-32px)]">
  <% if results.any? %>
    <% results.each do |result| %>
      <button
        id="<%= result.place_id %>"
        data-action="click->address-search#selectAddress"
        class="w-full text-left px-4 py-2 hover:bg-gray-100 focus:bg-gray-100 focus:outline-none text-gray-900"
      >
        <div class="font-medium"><%= result.data["name"] %></div>
        <div class="text-sm text-gray-600" data-address-search-target="address"><%= result.address %></div>
      </button>
    <% end %>
  <% end %>
</div> 